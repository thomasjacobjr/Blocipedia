

<%= form_for @wiki do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', placeholder: "Enter wiki body" %>
  </div>

  <div class="form-group">
    <%= label_tag(:collaborator_email, "Collaborators:") %>
    <%= text_field_tag :collaborator_email, nil, placeholder: "lorbo@lorbosdomain.com" %>
  </div>

  <ul>
    <% @wiki.collaborators.each do |collaborator| %>
    <li>

      <%= collaborator.email %>
      <%= link_to "Remove", wiki_collaborator_path(@wiki, collaborator), method: :delete, class: "btn btn-danger", confirm: "Are you sure you want to remove this collaborator?" %> 

    </li>
  <% end %>
  </ul>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

  <div class="col-md-8">
    <%= render partial: 'form', locals: { wiki: @wiki } %>
  </div>
<% end %>
